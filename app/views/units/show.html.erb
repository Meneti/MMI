function allowDrop(ev) {
    ev.preventDefault();
}

function drag(ev) {
    ev.dataTransfer.setData("image", ev.target.id);
}

function drop(ev) {
    ev.preventDefault();
    var data = ev.dataTransfer.getData("image");
    var couch = document.getElementById(data);
    ev.target.appendChild(couch);

    couch.style.top = ev.clientY + "px";
    couch.style.left = ev.clientX + "px";
    console.log(couch);
}
</script>